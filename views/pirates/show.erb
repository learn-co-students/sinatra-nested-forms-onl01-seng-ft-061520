<h1>Pirate</h1>
<h2><%=@pirate.name%></h2>
<h2><%=@pirate.weight%></h2>
<h2><%=@pirate.height%></h2>

<%i=0%>
<%@ships.each do |ship|%>
    <%if i == 0%>
        <h1>The First Ship</h1>
        <h2><%=ship.name%></h2>
        <h2><%=ship.type%></h2>
        <h2><%=ship.booty%></h2>
    <%else%>
        <h1>The Second Ship</h1>
        <h2><%=ship.name%></h2>
        <h2><%=ship.type%></h2>
        <h2><%=ship.booty%></h2>
    <% end %>
    <%i += 1%>
<%end%>


